{% extends 'base.html.twig' %}

{% block title %}Connexion au site!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="offset-3 col-md-6">
                <div class="bg-light py-3 px-3">
                    {% if hasError %}
                        <div class="alert alert-danger">Une erreur est survenue, le nom ou le mot de passe est invalide</div>
                    {%  endif %}
                    <form action="{{  path('account_login') }}" method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" name="_username" id="email" class="form-control"
                                   placeholder="Adresse email." required value="{{ userName }}">
                        </div>
                        <div class="form-group">
                            <label for="email">Password</label>
                            <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de pass." required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Connexion !</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="offset-3 col-md-6 text-center">
                <a href="{{ path('account_register') }}">Cr√©er un compte...</a>
            </div>
        </div>
    </div>
{% endblock %}
