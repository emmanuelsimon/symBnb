{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h class="y">Gestion des annonces</h>
        <table class="table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th class="text-center">RÃ©servations</th>
                    <th>Note</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for ad in ads %}
                    <tr>
                        <td>{{ ad.id }}</td>
                        <td>{{ ad.title }}</td>
                        <td>
                            <img src="{{ ad.author.picture }}" alt="Avatar de {{ ad.author.fullname }}" class="avatar avatar-micro mr-2">
                            {{ ad.author.fullname }}
                        </td>
                        <td class="text-center">
                            <span class="badge badge-primary rounded">{{ ad.bookings | length }}</span>
                        </td>
                        <td>{% include 'partials/rating.html.twig' with {'rating': ad.avgRating} %}</td>
                        <td>
                            <a href="#" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                            <a href="#" class="btn btn-danger"><i class="fas fa-trash"></i> </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>

        </table>
    </div>
{% endblock %}
