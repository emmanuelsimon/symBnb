{% extends 'base.html.twig' %}

{% block title %}Nos magnifiques annonces !{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="my-3">Voici les annonces de nos hotes</h1>
        <div class="row">
            {% for ad in ads %}
                {% set url=path('ads_show', {'slug':ad.slug}) %}
                <div class="col-md-4">
                    <div class="card bg-light mb-3">
                        <div class="card-header text-center">
                            {{ ad.rooms }} chambres, <strong>{{ ad.price }}&euro; / nuit</strong>
                            <small>Pas encore not√©</small>
                            <img src="{{ ad.coverImage }}" alt="image de l'appartement" style="height: 200px; width: 100%; display: block">
                            <div class="card-body">
                                <h4 class="card-title">
                                    {{ ad.title }}
                                </h4>
                                <p class="card-text">
                                    {{ ad.introduction }}
                                </p>
                                <a href="{{ url }}" class="btn btn-secondary btn-lg">En savoir plus</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}